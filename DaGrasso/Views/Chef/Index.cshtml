@model List<OrderDetail>
@{
    ViewData["Title"] = $"Orders to make";
}
@for (int i = 0; i < @Model.Count; i++)
{
    <div class="card">
        <div class="card-header">
            <h1>Zamowienia</h1>
        </div>
        <div class="card-body">

            <h1>@Model[i].Pizza.Name * @Model[i].Amount</h1>
            

        </div>
        <div class="card-footer">
            <a asp-action="CreatePizza" style="width: auto" class="btn btn-primary">
                Create Pizza
            </a>
        </div>
    </div>

}

