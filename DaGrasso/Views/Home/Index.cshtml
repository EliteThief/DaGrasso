@model List<DaGrasso.Pizza>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-75 mx-auto" src="~/Images/piccka2.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0, 26, 51,0.4);">
                    <h2>Always Fresh</h2>
                    <h4>We use only local ingredients and freshly made pastry for every order!</h4>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-75 mx-auto" src="~/Images/piccka1.png" alt="Second slide">
                <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0, 26, 51,0.4);">
                    <h2>Original Taste</h2>
                    <h4>Best, original italian pizza in the city.</h4>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-75 mx-auto" src="~/Images/piccka3.png" alt="Third slide">
                <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0, 26, 51,0.4);">
                    <h2>Order Today!</h2>
                    <h4>Our delivery is fast, so you can enjoy your freshly baked hot pizza at home!</h4>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

<div>
    <h2 class="text-center m-3">All Pizzas that we currently have </h2>
</div>
<div class="row mx-auto px-1"  style="width: 90%;">
    @{
        foreach (var pizza in Model)
        {

            @await Html.PartialAsync("PizzaSummary", pizza)

        }
    }
</div>