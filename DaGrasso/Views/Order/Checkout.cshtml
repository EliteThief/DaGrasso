@using DaGrasso.Controllers
@model Order
<h3 class="text-center">You are just one step away from ordering your Pizzas.</h3>
<div class="row orderForm">
   

    <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label asp-for="LastName" class=" control-label"></label>
            <div>
                <input asp-for="LastName" class="form-control col-md-10" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-8 control-label"></label>
            <div >
                <input asp-for="FirstName" class="form-control col-md-10" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Street" class="col-md-2 control-label"></label>
            <div >
                <input asp-for="Street" class="form-control col-md-10" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ZipCode" class="col-md-2 control-label"></label>
            <div >
                <input asp-for="ZipCode" class="form-control col-md-10" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BuildingNumber" class="col-md-2 control-label"></label>
            <div >
                <input asp-for="BuildingNumber" class="form-control col-md-10" />
                <span asp-validation-for="BuildingNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HouseNumber" class="col-md-2 control-label"></label>
            <div >
                <input asp-for="HouseNumber" class="form-control col-md-10" />
                <span asp-validation-for="HouseNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
            <div >
                <input asp-for="PhoneNumber" class="form-control col-md-10" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div >
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-8">
                <input class="btn btn-success" type="submit" value="Complete order" />
                <input asp-controller="ShoppingCart" asp-action="index" class="btn btn-default" type="submit" value="Return " />
            </div>
        </div>

    </form>
        </div>